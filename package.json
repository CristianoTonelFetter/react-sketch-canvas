{
  "name": "react-sketch-canvas",
  "version": "6.2.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --no-cache",
    "lint": "turbo run lint",
    "test": "turbo run build lint test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ci:build": "cp README.md packages/react-sketch-canvas/ && yarn workspace react-sketch-canvas ci:build",
    "publish-packages": "yarn test && yarn ci:build && changeset version && changeset publish"
  },
  "devDependencies": {
    "@react-sketch-canvas/eslint-config-custom": "^0.0.0",
    "prettier": "^2.8.3",
    "turbo": "1.10.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0"
  }
}
